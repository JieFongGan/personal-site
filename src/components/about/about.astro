---
import { Image } from "astro:assets";
import { aboutData } from "../../lib/about.data";
import { MapPin, ArrowUpRight } from "lucide-astro";
import myImage from "../../assets/images/avatar.jpg";
---

<section id="about" class="py-16 lg:py-24 px-6 bg-base-100">
    <div class="container mx-auto max-w-7xl">
        <header
            class="about-header flex flex-col md:flex-row justify-between items-start md:items-end mb-10 lg:mb-16 gap-6 border-b border-base-content/5 pb-8"
        >
            <div class="w-full">
                <h2
                    class="about-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black tracking-tighter uppercase italic leading-[0.9] md:leading-[0.8] break-words"
                >
                    ABOUT <br class="block sm:hidden" />
                    <span class="text-primary">ME</span>
                </h2>
            </div>

            <p
                class="about-summary font-mono text-[10px] uppercase opacity-40 tracking-[0.4em] max-w-xs text-left md:text-right leading-relaxed"
            >
                {aboutData.summary}
            </p>
        </header>

        <div
            class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start"
        >
            <div class="lg:col-span-5 space-y-6">
                <div
                    class="about-card card bg-base-200 rounded-3xl overflow-hidden border border-base-content/5 shadow-xl"
                >
                    <figure class="about-image-wrapper">
                        <Image
                            src={myImage}
                            alt={aboutData.name}
                            width={1000}
                            height={1500}
                            class="w-full h-auto object-cover min-h-[400px] lg:min-h-[500px]"
                        />
                    </figure>
                    <div
                        class="about-card-footer p-5 bg-base-300 flex items-center justify-between"
                    >
                        <div class="space-y-1">
                            <span
                                class="text-xs font-black uppercase tracking-widest block"
                                >{aboutData.name}</span
                            >
                            <p
                                class="text-[10px] font-mono opacity-60 uppercase tracking-wide"
                            >
                                {aboutData.title}
                            </p>
                        </div>
                        <div
                            class="flex items-center gap-2 text-[10px] font-bold opacity-60"
                        >
                            <MapPin size={14} class="text-primary" />
                            {aboutData.address}
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-7 space-y-10 lg:pt-4">
                <div class="space-y-6">
                    <div
                        class="about-badge badge badge-outline border-base-content/20 font-mono text-[10px] tracking-widest px-4 py-3"
                    >
                        BORN IN 2002
                    </div>

                    <h3
                        class="about-subtitle text-3xl md:text-4xl font-bold leading-tight uppercase tracking-tight text-balance"
                    >
                        Building things on the <span
                            class="text-primary underline underline-offset-8 decoration-primary/20"
                            >web.</span
                        >
                    </h3>

                    <div
                        class="about-bio space-y-4 text-base md:text-lg text-base-content/70 font-medium leading-relaxed"
                    >
                        {
                            aboutData.bio
                                .split("\n\n")
                                .map((paragraph) => <p class="about-paragraph">{paragraph}</p>)
                        }
                    </div>
                </div>

                <div class="about-social-section pt-8 border-t border-base-content/5">
                    <p
                        class="about-social-label text-[10px] uppercase tracking-[0.4em] font-black opacity-30 mb-6 text-center lg:text-left"
                    >
                        Let's Connect
                    </p>

                    <div class="about-social-grid grid grid-cols-1 sm:grid-cols-2 gap-3">
                        {
                            aboutData.social.map((item, index) => (
                                <a
                                    href={item.link}
                                    target="_blank"
                                    data-social-index={index}
                                    class="about-social-btn btn btn-md btn-outline border-base-content/10 flex justify-between items-center group hover:bg-primary hover:border-primary px-5 rounded-2xl transition-all duration-500"
                                >
                                    <div class="flex items-center gap-3">
                                        <svg
                                            viewBox="0 0 24 24"
                                            class="size-4 fill-current group-hover:text-primary-content"
                                        >
                                            <path d={item.icon} />
                                        </svg>
                                        <span class="text-[10px] font-black uppercase tracking-widest group-hover:text-primary-content">
                                            {item.name}
                                        </span>
                                    </div>
                                    <ArrowUpRight
                                        size={16}
                                        class="opacity-30 group-hover:opacity-100 group-hover:text-primary-content group-hover:translate-x-1 group-hover:-translate-y-1 transition-all"
                                    />
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
  import { initAbout } from "./about.ts";
  
  initAbout();
  
  document.addEventListener('astro:page-load', () => {
    initAbout();
  });
</script>