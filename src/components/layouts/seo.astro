---
import { aboutData } from "@lib/about.data";

// SEO Metadata
const siteUrl = "https://ganjiefong.pages.dev";
const title = `${aboutData.name} â€” ${aboutData.summary}`;
const description = `Personal website of ${aboutData.name}, a ${aboutData.title} based in ${aboutData.location.city}, ${aboutData.location.country}. ${aboutData.summary}`;
const socialLinks = aboutData.social.map((item) => item.link);
---

<!-- Base Meta -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<title>{title}</title>
<meta name="description" content={description} />
<meta name="author" content={aboutData.name} />
<meta name="robots" content="index, follow" />
<meta name="google-site-verification" content="I31vaJXHXTGCcCZFRKC9FqLGSF-0XeEstpVnE-7pTS8" />

<link rel="canonical" href={siteUrl} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={siteUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={aboutData.name} />

<!-- Twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:creator" content="@ganjiefong" />

<!-- Schema.org -->
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    name: aboutData.name,
    alternateName: aboutData.aliases,
    url: siteUrl,
    description,
    jobTitle: aboutData.title,
    address: {
      "@type": "PostalAddress",
      addressLocality: aboutData.location.city,
      addressRegion: aboutData.location.region,
      addressCountry: aboutData.location.countryCode,
    },
    sameAs: socialLinks,
  })}
></script>
